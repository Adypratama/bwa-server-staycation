<div class="tab-pane fade show active" id="show-item" role="tabpanel" aria-labelledby="show-item-tab">
    <!-- DataTales Example -->
    <div class="card shadow mb-4 mt-2">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>No. </th>
                            <th class="text-center">Title</th>
                            <th class="text-center">Price</th>
                            <th class="text-center">Country</th>
                            <th class="text-center">City</th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let i = 0; i < item.length; i++) { %>
                            <tr>
                                <td><%= i + 1 %> </td>
                                <td><%= item[i].title %> </td>
                                <td><%= item[i].price %> </td>
                                <td><%= item[i].country %> </td>
                                <td><%= item[i].city %> </td>
                                <td>
                                    <form action="/admin/item/<%= item[i].id %>/delete?_method=DELETE" method="POST">
                                        <a href="/admin/item/show-item/<%= item[i].id %>" class="btn btn-info btn-sm"><i class="fas fa-image"> IMAGE</i></a>
                                        <a href="/admin/item/<%= item[i].id %>" class="btn btn-warning btn-sm"><i class="fas fa-edit"> Edit</i></a>
                                        <button type="submit" class="btn btn-danger btn-sm"><i class="fas fa-trash"> Delete</i></button>
                                        <a href="/admin/item/show-detail-item/<%= item[i].id %>" class="btn btn-success btn-sm"><i class="fas fa-plus"> PLUS</i></a>
                                    </form>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>